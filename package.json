{
  "name": "political-dilemma-service",
  "version": "1.2.0",
  "description": "Political dilemma service",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=20.11.x",
    "npm": ">=10.2.4"
  },
  "private": true,
  "scripts": {
    "start": "npm run applyMigrations && node -r dotenv/config index.js",
    "dev": "npm run applyMigrations && nodemon --config nodemon.json --inspect -r dotenv/config index.js",
    "lint": "eslint . --ext .js",
    "initStack": "cd ./pd-stack && docker compose up -d",
    "shutdownStack": "cd ./pd-stack && docker compose down -d",
    "rebuildDb": "./pd-stack/rebuild-db.sh",
    "applyMigrations": "node -r dotenv/config ./src/scripts/applyMigrations.js",
    "seedDb": "node -r dotenv/config ./src/scripts/seedDb/index.js",
    "verifyEmail": "node -r dotenv/config ./src/scripts/verifyEmail.js",
    "importStaticData": "node -r dotenv/config ./src/scripts/jobs/importStaticData/index.js"
  },
  "keywords": [
    "political-dilemma"
  ],
  "author": "filippomeniswork@gmail.com",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/env": "^4.3.0",
    "@fastify/helmet": "^10.1.0",
    "@fastify/multipart": "^7.5.0",
    "@fastify/sensible": "^5.5.0",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^3.0.0",
    "@immobiliarelabs/fastify-sentry": "^4.1.1",
    "aws-sdk": "^2.1569.0",
    "bcrypt": "^5.1.1",
    "bullmq": "^3.4.1",
    "close-with-grace": "^1.3.0",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.1",
    "fastify-cookie": "^5.3.2",
    "fastify-massive": "^1.0.0",
    "fastify-plugin": "^4.5.1",
    "fluent-json-schema": "^4.2.1",
    "lodash": "^4.17.21",
    "massive": "^6.11.2",
    "moment": "^2.30.1",
    "nanoid": "^5.0.6",
    "nodemailer": "^6.9.11",
    "pg": "^8.11.3",
    "pino": "^8.19.0",
    "pino-sentry-transport": "^1.1.0",
    "postgrator": "^7.2.0",
    "redis": "^4.6.12",
    "sparql-http-client": "^3.0.0",
    "ua-parser-js": "^1.0.37"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.1.1",
    "nodemon": "^3.1.0",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.8.1"
  }
