{
  "name": "political-dilemma-service",
  "version": "0.0.1",
  "description": "Political dilemma service",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=16.13.x",
    "npm": ">=8.1.0"
  },
  "private": true,
  "scripts": {
    "start": "npm run applyMigrations && cross-env NODE_ENV=production node -r dotenv/config index.js",
    "dev": "npm run applyMigrations && cross-env NODE_ENV=development nodemon --config nodemon.json --inspect -r dotenv/config index.js",
    "test": "tap",
    "lint": "eslint . --ext .js",
    "prepare": "husky install",
    "init-tools": "cd ./pd-stack && docker-compose -f docker-compose-tools.yml up -d",
    "init-stack": "cd ./pd-stack && docker-compose up -d",
    "shutdown-stack": "cd ./pd-stack && docker-compose down -d",
    "rebuild-db": "./pd-stack/rebuild-db.sh",
    "applyMigrations": "node -r dotenv/config ./src/scripts/applyMigrations.js"
  },
  "keywords": [
    "political-dilemma"
  ],
  "author": "filippomeniswork@gmail.com",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@fastify/cors": "8.1.0",
    "@fastify/env": "4.1.0",
    "@fastify/helmet": "9.1.0",
    "@fastify/sensible": "5.1.1",
    "@fastify/swagger": "7.4.1",
    "aws-sdk": "2.1063.0",
    "bcrypt": "5.0.1",
    "cross-env": "7.0.3",
    "dotenv": "10.0.0",
    "fastify": "4.5.3",
    "fastify-cookie": "5.3.2",
    "fastify-massive": "1.0.0",
    "fastify-multer": "2.0.3",
    "fastify-plugin": "4.2.1",
    "fluent-json-schema": "3.0.1",
    "lodash": "4.17.21",
    "moment": "2.29.1",
    "nodemailer": "6.7.2",
    "pg": "8.7.1",
    "pino": "7.6.0",
    "postgrator": "7.1.0",
    "redis": "3.1.2"
  },
  "devDependencies": {
    "eslint": "7.32.0",
    "eslint-config-standard": "16.0.3",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-promise": "5.1.1",
    "husky": "7.0.4",
    "nodemon": "2.0.12",
    "prettier": "2.4.1",
    "tap": "15.0.9"
  }
}
