{
  "name": "political-dilemma-service",
  "version": "0.0.1",
  "description": "Political dilemma service",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": ">=16.13.x",
    "npm": ">=8.1.0"
  },
  "private": true,
  "scripts": {
    "start": "npm run applyMigrations && node -r dotenv/config index.js",
    "dev": "npm run applyMigrations && nodemon --config nodemon.json --inspect -r dotenv/config index.js",
    "test": "tap",
    "lint": "eslint . --ext .js",
    "prepare": "husky install",
    "init-tools": "cd ./pd-stack && docker-compose -f docker-compose-tools.yml up -d",
    "init-stack": "cd ./pd-stack && docker-compose up -d",
    "shutdown-stack": "cd ./pd-stack && docker-compose down -d",
    "rebuildDb": "./pd-stack/rebuild-db.sh",
    "applyMigrations": "node -r dotenv/config ./src/scripts/applyMigrations.js",
    "seedDb": "node -r dotenv/config ./src/scripts/seedDb/index.js",
    "verifyEmail": "node -r dotenv/config ./src/scripts/verifyEmail.js"
  },
  "keywords": [
    "political-dilemma"
  ],
  "author": "filippomeniswork@gmail.com",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "dependencies": {
    "@fastify/cors": "8.2.0",
    "@fastify/env": "4.2.0",
    "@fastify/helmet": "10.1.0",
    "@fastify/multipart": "7.3.0",
    "@fastify/sensible": "5.2.0",
    "@fastify/swagger": "7.4.1",
    "@immobiliarelabs/fastify-sentry": "4.1.1",
    "aws-sdk": "2.1272.0",
    "bcrypt": "5.1.0",
    "bullmq": "3.4.1",
    "close-with-grace": "1.1.0",
    "cross-env": "7.0.3",
    "dotenv": "16.0.3",
    "fastify": "4.10.2",
    "fastify-cookie": "5.3.2",
    "fastify-massive": "1.0.0",
    "fastify-plugin": "4.4.0",
    "fluent-json-schema": "4.0.0",
    "lodash": "4.17.21",
    "moment": "2.29.4",
    "nanoid": "4.0.0",
    "nodemailer": "6.8.0",
    "pg": "8.8.0",
    "pino": "8.7.0",
    "pino-sentry-transport": "0.0.6",
    "postgrator": "7.1.1",
    "redis": "4.5.1",
    "tap": "16.3.2",
    "ua-parser-js": "1.0.32"
  },
  "devDependencies": {
    "eslint": "8.29.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-promise": "6.1.1",
    "husky": "7.0.4",
    "massive": "6.10.2",
    "nodemon": "2.0.20",
    "pino-pretty": "9.1.1",
    "prettier": "2.8.1"
  }
}
